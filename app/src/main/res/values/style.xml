<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.SideSheet.Modal" parent="Widget.Material3.SideSheet.Modal">
        <item name="backgroundTint">?attr/sideSheetDialogTheme</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Bottom sheet custom theme -->
    <style name="Theme.MyBottomSheet" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <!-- Bottom sheet style -->
    <style name="CustomBottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="android:backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="paddingStart">16dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Material3.BottomSheetCustom</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.BottomSheetCustom" parent="">
        <!-- Customize the shape appearance of the bottom sheet here -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="ShapeAppearance.FreeTube.Corner.Small" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.FreeTube.Corner.Medium" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.FullCorner" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>