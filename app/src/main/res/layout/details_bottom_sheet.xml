<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/modalBottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <!-- Video Description -->
    <TextView
        android:id="@+id/videoDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rohani Mahal Full Movie. This setup ensures that the custom style is correctly applied to your bottom sheet, enhancing its appearance according to Material Design principles."
        android:textSize="15sp"
        android:maxLines="50"
        android:maxLength="700"
        android:textColor="?attr/colorOnSurface"
        android:gravity="start"
        android:fontFamily="@font/roboto" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false">

        <!-- Second Item -->
        <LinearLayout
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_language"/>

            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hindi"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface"
                android:paddingTop="4dp"/>

        </LinearLayout>

        <!-- Third Item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="Watch on YouTube"
                android:src="@drawable/ic_theaters"/>

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horror"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface"
                android:paddingTop="4dp"/>

        </LinearLayout>


        <!-- Third Item -->
        <LinearLayout
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="Watch on YouTube"
                android:src="@drawable/ic_open_in_new"/>

            <TextView
                android:id="@+id/channelJump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Youtube"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface"
                android:paddingTop="4dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
