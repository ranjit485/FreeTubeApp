                    android:layout_marginBottom="75dp"
                    android:focusable="true"
                    android:backgroundTint="#60191C20"
                    android:soundEffectsEnabled="true"
                    app:icon="@drawable/play_fill"
                    app:iconTint="@color/white" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shimmer_home_video_thumbnail_3"
                    android:padding="8dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/shimmer_channel_logo_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/darker_gray"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/shimmer_home_video_title_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:maxLength="35"
                        android:maxLines="2"
                        android:background="@android:color/darker_gray"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/shimmer_channel_logo_3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/shimmer_channel_name_3"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/darker_gray"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        style="@style/TextAppearance.Material3.LabelSmall"
                        android:fontFamily="@font/roboto"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/shimmer_channel_logo_3"
                        app:layout_constraintTop_toBottomOf="@id/shimmer_home_video_title_3" />

                    <TextView
                        android:id="@+id/shimmer_duration_3"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        style="@style/TextAppearance.Material3.LabelSmall"
                        android:maxLength="6"
                        android:layout_marginTop="4dp"
                        android:background="@android:color/darker_gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/shimmer_channel_name_3"
                        app:layout_constraintTop_toBottomOf="@id/shimmer_home_video_title_3" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
